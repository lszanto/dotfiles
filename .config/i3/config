# rofi options as we run it twice
set $rofi_lines     4
set $rofi_opacity   95

# start rofi (a program launcher)
bindsym $mod+d exec rofi -show run -lines $rofi_lines -eh 2 -width 100 -padding 486 -opacity $rofi_opacity -bw 0 -font "SFNS Display 18"

# replace alt + tab with rofi window
bindsym $alt+Tab exec rofi -show window -lines $rofi_lines -eh 2 -width 100 -padding 486 -opacity $rofi_opacity -bw 0 -font "SFNS Display 18"

